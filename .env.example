# Add these to your .env file for optimal video upload performance

# Server timeout configurations
SERVER_TIMEOUT=900000
REQUEST_TIMEOUT=900000
KEEP_ALIVE_TIMEOUT=910000
HEADERS_TIMEOUT=920000

# Upload configurations  
MAX_FILE_SIZE=2147483648
# ^ 2GB in bytes (2 * 1024 * 1024 * 1024)

MAX_VIDEO_SIZE=2147483648
# ^ 2GB for videos specifically

# Directory paths
UPLOAD_DIR=./uploads
VIDEO_UPLOAD_DIR=./uploads/videos

# Application URL
APP_URL=http://localhost:3000
# ^ Update this to your actual domain in production